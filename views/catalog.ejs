            <div class="fa fa-search" id="search-btn"></div>
            <div class="fa fa-user" id="login-btn"></div>
        </div>
        <form class="search-form"> <input type="search" id="search-box" placeholder="search here...."> <label
                for="search-box" class="fa fa-search"></label> </form>
        <form action="#" class="login-form">
            <h3>login now</h3> <!--video 10. this makes the "login" button-->
            <input type="email" placeholder="enter your email" class="box">
            <input type="password" placeholder="enter your password" class="box">
            <p> Forgot Your Password? <a href="#"> Click Here</a></a></p>
            <p> Don't have an account? <a href="login-page.html"> Create
                    Here</a></a></p> <input type="submit" value="Login Now" class="btn">
        </form>
    </header> <!-- Main Content Section -->
    <main>
        <section class="item-list" id="item-list">
            <h1 class="heading"><span>Item Catalog</span></h1>
            <!-- Container for displaying items -->
            <div class="item-list-container">
                <% if (products && Array.isArray(products)) { %>
                    <% products.forEach(product => { %>

                            <form action="/catalog/<%= product.sku %>" method="get" class="item">
                                <button type="submit">

                                    <% const image_link = product.name.replace(/ /g, "_").toLowerCase(); %>
                                    <img src="../image/<%=image_link%>.png" alt="<%= product.name %>"  width="125" height="100">
                                    <h2>
                                        <%= product.name %>
                                    </h2>
                                    <p>Price:
                                        <%= product.price %>
                                    </p>
                                    <p>Department:
                                        <%= product.department %>
                                    </p>
                                    <p>Availability:
                                        <%= product.items_in_case>0 ? 'In Stock' : 'Out of Stock' %>
                                    </p>
                                    <p>SKU:
                                        <%= product.sku %>
                                    </p> <!-- Add more properties as needed -->
                                </button>
                            </form>
                    <!-- You can customize the HTML structure based on your design -->
                    <% }); %>
                <% } else { %>
                    <p>No products available.</p>
                <% } %>
                </div>
        </section>
    </main> <!-- Include your JavaScript file or code here -->

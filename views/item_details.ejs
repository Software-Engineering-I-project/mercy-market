<body>

    <!-- Item Details Section -->
    <section class="item-details" id="item-details">
        <!-- Replace the following content with dynamic data based on the selected item -->
        <% if (product) { %>
        <% const image_link = product.name.replace(/ /g, "_").toLowerCase(); %>
        <img src="../image/<%=image_link%>.png" alt="<%= product.name %>">
        <div class="item-info">
            <h1><%= product.name %></h1>
            <p><strong>Price:</strong> <%= product.price %></p>
            <p><strong>Section:</strong> <%= product.department %></p>
            <p><strong>SKU:</strong> <%= product.sku %></p>
            <p><strong>Availability:</strong> <%= product.status %></p>
            <p><strong>Quantity in Case:</strong> <%= product.items_in_case %></p>
        </div>
        <% } else { %>
        <img src="image/black_beans.png" alt="Item Image">
        <div class="item-info">
            <h1>Item Not Found</h1>
            <p><strong>Price:</strong> $00.00</p>
            <p><strong>Section:</strong> Not Found</p>
            <p><strong>SKU:</strong> NO_SKU</p>
            <p><strong>Availability:</strong> N/A</p>
            <p><strong>Quantity in Case:</strong> N/A</p>
        <% } %>
        </div>
    </section>

    <!-- History Table Section -->
    <section class="history-table-section">
        
        <table class="history-table">
            <thead>
                <tr>
                    <th></th>
                    <th>Last 7 Days</th>
                    <th>Last 14 Days</th>
                    <th>Last 30 Days</th>
                    <th>Last 3 Months</th>
                    <th>Last 6 Months</th>
                    <th>Last 12 Months</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Delivery History</td>
                    <% if (delivery) { %>
                        <td><!-- Last 7 Days --><%= delivery.last_7d %></td>
                        <td><!-- Last 14 Days --><%= delivery.last_14d %></td>
                        <td><!-- Last 30 Days --><%= delivery.last_30d %></td>
                        <td><!-- Last 3 Months --><%= delivery.last_3m %></td>
                        <td><!-- Last 6 Months --><%= delivery.last_6m %></td>
                        <td><!-- Last 12 Months --><%= delivery.last_12m %></td>
                    <% } else { %>
                        <% for (let i = 0; i<6; i++) { %>
                            <td><!-- Last 12 Months -->no data available</td>
                        <% } %>
                    <% } %>
                </tr>
                <tr>
                    <td>Sales History</td>
                    <% if (sales) { %>
                        <td><!-- Last 7 Days --><%= sales.last_7d %></td>
                        <td><!-- Last 14 Days --><%= sales.last_14d %></td>
                        <td><!-- Last 30 Days --><%= sales.last_30d %></td>
                        <td><!-- Last 3 Months --><%= sales.last_3m %></td>
                        <td><!-- Last 6 Months --><%= sales.last_6m %></td>
                        <td><!-- Last 12 Months --><%= sales.last_12m %></td>
                    <% } else { %>
                        <% for (let i = 0; i<6; i++) { %>
                            <td><!-- Last 12 Months -->no data available</td>
                        <% } %>
                    <% } %>
                </tr>
            </tbody>
        </table>
    </section>


